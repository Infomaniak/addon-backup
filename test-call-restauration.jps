type: update
name: Add-on restauration

targetNodes:

  nodeGroup: '*'

onInstall:

  - cmd[${settings.node}]: |-

      curl -fsS https://raw.githubusercontent.com/axelJacquet/addon-backup/master/restauration.sh --output restauration.sh

      chmod +x restauration.sh

      ./restauration.sh -i "${settings.id}" -d ${settings.destination}

    user: root

responses:
  4109:
    type: error
    message: Les IDS renseignés ( ${settings.id} )  ne sont pas bons, veuillez vérifiez les ids dans le menu de restauration ou dans /tmp/Backup_plan


success:

  text: Le/les backups correspondants à/aux id ${settings.id} a/ont été restauré avec succé dans ${settings.destination}

  mail: Le/les backups correspondants à/aux id ${settings.id} a/ont été restauré avec succé dans ${settings.destination}
